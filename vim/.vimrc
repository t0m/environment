set nocompatible
syntax on
set number
hi LineNr guifg=#444444 ctermfg=239
set expandtab
set smarttab
set shiftwidth=4
set softtabstop=4
set ignorecase
inoremap jj <Esc>
set hlsearch
set incsearch
set nowrap
set noerrorbells
set novisualbell
set backspace=indent,eol,start
set undodir=~/.vim/undodir
set undofile
set undolevels=9999
set undoreload=10000